mixin jq-quiz__property(params)
    - params = params || {};
    - var attrs = {};
    - attrs["data-jq-quiz-property"]=params.type
    if(params.content)
        -params.tag = "dt";
        +_mod-baseContent({
            internalParams: {
                cssClass: "jq-quiz__property",
                ignoreContent: false
            },
            externalParams: params
        })&attributes(attributes)
        -params.tag = "dd";
        +_mod-baseContent({
            internalParams: {
                cssClass: "jq-quiz__property",
                attributes: attrs
            },
            externalParams: params
        })&attributes(attributes)
        block
    else
        +_mod-baseContent({
            internalParams: {
                cssClass: "jq-quiz__property"
            },
            externalParams: params
        })&attributes(attributes)
            block