include ../common/_globalStructure/_globalStructure
//- @pugdoc
    @function jq-quiz__title
    @description Mixin to generate the title of the quiz
    @param  {Object}            [params]                    Parameters
    @param  {String}            [params.tag=h]              Tag to render. By default renders hx tag, where X is a number passed in the params.level option
    @param  {Number}            [params.level=1]            Level of the header. Only available if params.tag IS NOT provided. Set the level of the head element to render. By default is 1, so it will render an h1 element
    @param  {String}            [params.cssClass]           Class to add to the element.
    @param  {Object}            [params.attributes]         Key-value attributes to add to the element
    @param  {String}            [params.content]            If is provided, the value will be setted as the text of the element
    @example
    +jq-quiz__title({
        id:"someId",
        cssClass:"someCssClass",
        attributes:{
            "data-some-attribute":"someValue"
        },
        content:"Some title"
    })
    @example
    +jq-quiz__title({
        id:"someId",
        cssClass:"someCssClass",
        attributes:{
            "data-some-attribute":"someValue"
        }
    })
        span Some title
    @example
    +jq-quiz__title({
        level:2,
        content:"Some title"
    })
    @example
    +jq-quiz__title({
        tag:"p",
        content:"Some title"
    })
mixin jq-quiz__title(params)
    //Quiz title
    - params = params || {};
    - params.level = params.level || 1;
    +_mod-baseContent__title({
        internalParams: {
            cssClass: "jq-quiz__title",
            attributes: {
                "data-jq-quiz-title": ""
            },
            ignoreContent: false
        },
        externalParams: params
    })&attributes(attributes)
        block
    //End quiz title