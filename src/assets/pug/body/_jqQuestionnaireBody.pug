//-                 content:"Enunciado",
//-                 options:[
//-                     {
//-                         content:"Option"
//-                     },
//-                     {
//-                         content:"Option2",
//-                         isCorrect:true
//-                     }
//-                 ]
//-             }
//-         ]
//-     })
mixin jq-questionnaire__body(params)
    //Questionnaire body
    - params = params || {};
    +_mod-baseContent({
        internalParams: {
            cssClass: "jq-questionnaire__body",
            attributes: {
                "data-jq-questionnaire-body": ""
            }
        },
        externalParams: params
    })&attributes(attributes)
        if(params.questions)
            +jq-questionnaire__questions
                each question in params.questions
                    - question.multichoice = params.multichoice;
                    +jq-questionnaire__question(question)
        if(params.actions)
            +jq-questionnaire__actions({
                actions:params.actions
            })
        block
    //End questionnaire body